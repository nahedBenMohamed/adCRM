{% extends 'baseTeacher.html.twig' %}

{% block title %}Entreprise/Organisme!{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="remove-element-alert mt-2"></div>
                <div class="card">
                    <div class="card-body ps-0 pe-0">
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped" id="customerFormation">
                            <thead>
                            <tr>
                                <th scope="col">Nom de Client</th>
                                <th scope="col">Email de Client</th>
                                <!-- <th scope="col"></th>-->
                            </tr>
                            </thead>
                            <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td> <a href="{{path('app_customer_formation',{ 'customerId':  customer.id })}}" class="company-link" title="Liste des formations">{{customer.name}}</a></td>
                                    <td> <a href="{{path('app_customer_formation',{ 'customerId':  customer.id })}}" class="company-link" title="Liste des formations">{{customer.email}}</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        jQuery(document).ready(function() {
            $("#customerFormation tr td:last-child").removeClass('td-action');
        });
    </script>
{% endblock %}