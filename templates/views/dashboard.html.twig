        </div>
    </div><!-- End Left side columns -->

    <!-- Right side columns -->
    <div class="col-lg-4">

        <!-- Recent Activity -->
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Activité récente</h5>

            <div class="activity">
                {% for action in log %}
                    {% if action.activityName == "addOrganisme" %}
                        <div class="activity-item d-flex">
                            <div class="activite-label">{{ action.dateAjout|date}}</div>
                            <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                            <div class="activity-content">
                                {{ action.activityDescription }}
                                (<strong class="fw-bold text-dark"> {{ action.userName }}</strong>)
                            </div>
                        </div><!-- End activity item-->
                    {% endif %}
                    {% if action.activityName == "addFormation" %}
                        <div class="activity-item d-flex">
                            <div class="activite-label">{{ action.dateAjout|date}} </div>
                            <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                            <div class="activity-content">
                                {{ action.activityDescription }}
                                (<strong class="fw-bold text-dark"> {{ action.userName }}</strong>)
                            </div>
                        </div><!-- End activity item-->
                    {% endif %}
                    {% if action.activityName == "AddTrainee" %}
                        <div class="activity-item d-flex">
                            <div class="activite-label">{{ action.dateAjout|date}}</div>
                            <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                            <div class="activity-content">
                                {{ action.activityDescription|raw }}
                                (<strong class="fw-bold text-dark"> {{ action.userName }}</strong>)
                            </div>
                        </div><!-- End activity item-->
                    {% endif %}
                    {% if action.activityName == "updateFormation" %}
                        <div class="activity-item d-flex">
                            <div class="activite-label">{{ action.dateAjout|date}}</div>
                            <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                            <div class="activity-content">
                                {{ action.activityDescription }}
                                (<strong class="fw-bold text-dark"> {{ action.userName }}</strong>)
                            </div>
                        </div><!-- End activity item-->
                    {% endif %}
                    {% if action.activityName == "deleteformaion" %}
                        <div class="activity-item d-flex">
                            <div class="activite-label">{{ action.dateAjout|date}}</div>
                            <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                            <div class="activity-content">
                                {{ action.activityDescription }}
                                (<strong class="fw-bold text-dark"> {{ action.userName }}</strong>)
                            </div>
                        </div><!-- End activity item-->
                    {% endif %}
                {% endfor %}

            </div>

        </div>
        </div><!-- End Recent Activity -->


    </div><!-- End Right side columns -->

    </div>
</section>
