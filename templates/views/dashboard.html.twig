                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->
            </div>
        </div><!-- End Left side columns -->
    </div>
    <div class="row">

    <!-- Left side columns -->
    <div class="col-lg-8">
        <div class="row">
        <!-- Reports -->
        <div class="col-12">
            <div class="card">

            <!--<div class="filter">
                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                <li class="dropdown-header text-start">
                    <h6>Filter</h6>
                </li>

                <li><a class="dropdown-item" href="#">Today</a></li>
                <li><a class="dropdown-item" href="#">This Month</a></li>
                <li><a class="dropdown-item" href="#">This Year</a></li>
                </ul>
            </div>-->

            <div class="card-body">
                <h5 class="card-title">Evolution du nombre de stagiaires convoqués par mois</h5>

                <!-- Line Chart -->
                <div id="reportsChart"></div>

                <script>

                    var valTabs ={{ valTab|json_encode|raw }};
                    var datesTabs ={{ datesTab|json_encode|raw }};
                document.addEventListener("DOMContentLoaded", () => {
                    new ApexCharts(document.querySelector("#reportsChart"), {
                    series: [{
                        name: 'Nombre des stagiaires',
                        data: valTabs,
                    }],
                    chart: {
                        height: 350,
                        type: 'area',
                        toolbar: {
                        show: false
                        },
                    },
                    markers: {
                        size: 4
                    },
                    colors: ['#4154f1'],
                    fill: {
                        type: "gradient",
                        gradient: {
                        shadeIntensity: 1,
                        opacityFrom: 0.3,
                        opacityTo: 0.4,
                        stops: [0, 90, 100]
                        }
                    },
                    dataLabels: {
                        enabled: false
                    },
                    stroke: {
                        curve: 'smooth',
                        width: 2
                    },
                    xaxis: {
                        categories: datesTabs
                    },
                    }).render();
                });
                </script>
                <!-- End Line Chart -->

            </div>

            </div>
        </div><!-- End Reports -->
            <div class="row bloc-numbers">
                <div class="col-xxl-3 col-md-3">
                    <div class="card info-card revenue-card">

                        <div class="card-body">
                            <h5 class="card-title small">Nombre des formateurs</h5>

                            <div class="text-center">
                                <div class="ps-3">
                                    <h6>{{ nbTeachers }}</h6>
                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Revenue Card -->

                <!-- Customers Card -->
                <div class="col-xxl-3 col-md-3">

                    <div class="card info-card customers-card">
                        <div class="card-body">
                            <h5 class="card-title small">Nombre de contacts clients</h5>
                            <div class="text-center">
                                <div class="ps-3">
                                    <h6>{{ nbContactClient }}</h6>
                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->
                <!-- Customers Card -->
                <div class="col-xxl-3 col-md-3">

                    <div class="card info-card customers-card">
                        <div class="card-body">
                            <h5 class="card-title small">Nombre de finaceurs</h5>

                            <div class="text-center">
                                <div class="ps-3">
                                    <h6>{{ nbFinanceur }}</h6>
                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->
                <div class="col-xxl-3 col-md-3">

                    <div class="card info-card customers-card">
                        <div class="card-body">
                            <h5 class="card-title small">Nombre de liens</h5>

