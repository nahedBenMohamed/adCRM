{% extends base_template %}
{% block title %}Documents{% endblock %}
{% block stylesheets %}
    <style>
        .datatable-table > tbody > tr > td {
            word-break: break-all;
            white-space: normal;
        }
        .td-action {
            display: table-cell;
        }
    </style>
{% endblock %}
{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="remove-element-alert mt-2"></div>
                <div class="card">
                    <div class="card-body ps-0 pe-0">
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                            <tr>
                                <th scope="col">lien de Document</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for document in documents %}
                                <tr>
                                    <td><a href="/documents/companyFiles/{{document.filePath}}"> <u>{{document.title}}</u></a></td>
                                    <td class="text-center">
                                        {% if not isTeacher %}
                                        <div>
                                            <a href data-bs-toggle="modal" data-bs-target="#confirmationModal" data-remove-url="{{path('app_delete_document',{ 'id': document.id })}}" class="first-btn deleteBtn">
                                                <img src="{{asset('assets/img/icon/circle-delete-solid-red.svg')}}">
                                            </a>
                                        </div>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
