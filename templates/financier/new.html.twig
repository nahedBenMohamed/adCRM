{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajout de financeur{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter un nouveau financeur </h5>
                        <!-- add user Form -->
                        {{ form_start(financier) }}
                        <div class="row mb-3">
                            {{ form_row(financier.name,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(financier.email,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-9">
                                <a href="{{path('app_financier')}}">
                                    <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}" width="40">
                                </a>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="save-icon">
                                    <img src="{{asset('assets/img/icon/save-disk-solid.svg')}}" width="40">
                                </button>
                                <a href="{{path('app_financier_add')}}" class="float-end" >
                                    <img src="{{asset('assets/img/icon/circle-plus-solid.svg')}}" width="40">
                                </a>
                            </div>
                        </div>
                        {{ form_end(financier) }} <!-- End add user form -->
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}