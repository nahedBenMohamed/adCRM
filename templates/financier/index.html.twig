{% extends 'baseAdmin.html.twig' %}

{% block title %}Listes des financeurs{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des financeurs</h5>
                        <div class="row">
                            <div class="col-md-3"><a href="{{path('app_financier_add')}}" type="button" class="btn btn-primary">Ajouter un financeur</a></div>
                            <div class="col-md-9"></div>
                        </div>
                        <br/>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nom</th>
                                <th scope="col">email</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for financier in financiers %}
                                <tr>
                                    <td>{{financier.id}}</td>
                                    <td>{{financier.name}}</td>
                                    <td>{{financier.email}}...</td>
                                    <td>
                                        <a href="{{ path('app_financier_edit', { 'id':financier.id }) }}" class="btn btn-outline-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button class="btn btn-outline-danger" type="submit">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
