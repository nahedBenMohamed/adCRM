{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8"></div>
                            <div class="col-lg-4"><a href="{{path('app_add_link')}}" type="button" class="btn btn-primary float-end mt-4 mb-4">Ajouter un nouveau lien</a></div>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">lien</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for link in links %}
                                <tr>
                                    <th scope="row">{{link.id}}</th>
                                    <td>{{link.value}}</td>
                                    <td class="text-center">
                                        <a href="{{path('app_edit_link',{ 'id': link.id })}}" class="btn btn-outline-warning"> <i class="bi bi-pencil-square"></i></a>
                                        <a href="{{path('app_delete_link',{ 'id': link.id })}}" class="btn btn-outline-danger"> <i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
