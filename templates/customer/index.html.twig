{% extends 'baseAdmin.html.twig' %}

{% block title %}Listes des clients{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9"></div>
                            <div class="col-md-3">
                                <a href="{{path('app_customer_add')}}" title="Ajouter un client" class="float-end mt-4 mb-4 add-new">
                                    <img src="{{asset('assets/img/icon/circle-plus-solid.svg')}}" width="40">
                                </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Pr√©nom</th>
                                <th scope="col">Email</th>
                                <th>Entreprise / Organisme</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>{{customer.lastName}}</td>
                                    <td>{{customer.firstName}}</td>
                                    <td>{{customer.email}}</td>
                                    <td>{% if customer.company|length >0 %} {{customer.company.name}} {% endif %}</td>
                                    <td>
                                        <a href="" class="first-btn" title="supprimer">
                                            <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}">
                                        </a>
                                        <a href="{{ path('app_customer_edit', { 'id':customer.id }) }}" class="" title="modifier">
                                            <img src="{{asset('assets/img/icon/pen-solid.svg')}}">
                                        </a>
                                        {% if customer.infoFilename != '' %}
                                        <a href="/documents/customerFiles/{{ customer.infoFilename }}" class="" title="Voir fichier" target="_blank" style="margin-left: 10px">
                                            <img src="{{asset('assets/img/icon/file-solid.svg')}}">
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
