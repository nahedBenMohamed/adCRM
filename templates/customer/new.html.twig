{% extends 'baseAdmin.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    <style>
        .form-company {
            display: inline-flex;
            width: 100%;
            flex-wrap: nowrap;
        }
        .form-company >div {
            width: 90%;
        }
        .form-company a {
            margin-top: 18px;
        }
    </style
{% endblock %}
{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter un nouveau client </h5>
                        <!-- add user Form -->
                        {{ form_start(newCustomer) }}
                        <div class="row mb-3 form-company">
                            {{ form_row(newCustomer.company,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                            <a href="{{path('app_add_company')}}" target="_blank">  <img src="{{asset('assets/img/icon/plus-solid.svg')}}" width="40"></a>
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.lastName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.firstName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.position,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.email,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row pages-links">
                            <div class="col-md-4">
                                <a href="{{path('app_customer')}}">
                                    <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}" width="30">
                                </a>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="save-icon">
                                    <img src="{{asset('assets/img/icon/save-disk-solid.svg')}}" width="30">
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="{{path('app_customer_add')}}" class="float-end" >
                                    <img src="{{asset('assets/img/icon/circle-plus-solid.svg')}}" width="30">
                                </a>
                            </div>
                        </div>
                        {{ form_end(newCustomer) }} <!-- End add user form -->
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}