{% extends 'baseAdmin.html.twig' %}

{% block title %}Modification client{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Modifier les informations de client </h5>
                        <!-- add user Form -->
                        {{ form_start(newCustomer) }}
                        <div class="row mb-3">
                            {{ form_row(newCustomer.firstName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.lastName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(newCustomer.email,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-5 offset-md-7">
                                <button type="submit" class="btn btn-primary" style="float: right">Enregistrer</button>
                            </div>
                        </div>
                        {{ form_end(newCustomer) }} <!-- End add user form -->
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}