{% extends 'baseTeacher.html.twig' %}

{% block title %}Les Documents{% endblock %}
{% block stylesheets %}
    <style>
        .documents-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .document-card {
            background-color: #fff;
            width: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            text-align: center;
            transition: transform 0.2s ease;
            position: relative;
        }

        .document-card:hover {
            transform: translateY(-5px);
        }

        .document-card img {
            width: 100%;
            height: 120px;
            object-fit: cover;
        }

        .document-title {
            padding: 12px 10px;
            font-size: 14px;
            color: #333;
            font-weight: 500;
            min-height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 120px;
        }
        .nbDoc {
            margin: 5px;
            padding: 5px;
            position: absolute;
            right: 0;
            background: red;
            border-radius: 52%;
            color: #fff;
            font-size: 12px;
            width: 25px;
        }

        @media (max-width: 600px) {
            .document-card {
                width: 100%;
                max-width: 300px;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container-fluid" bis_skin_checked="1">
        <div class="row mb-2" bis_skin_checked="1">
            <div class="col-sm-12" bis_skin_checked="1">
                <h1>Documents et outils clés</h1>
                <div class="documents-container">
                    <a href="{{path('app_admin_get_documents',{ 'category': 'qualite' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-1.jpg" alt="Document 1">
                            <div class="document-title">Guide Référentiel National Qualité QUALIOPI </div>
                            <span class="nbDoc">{{ nbdocQualite }}</span>
                        </div>
                    </a>
                    <a href="{{path('app_admin_get_documents',{ 'category': 'checkLisFormateur' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-2.jpg" alt="Document 2">
                            <div class="document-title">Check-list des incontournables des formateurs·trices</div>
                            <span class="nbDoc">{{ nbdocCheckLisFormateur }}</span>
                        </div>
                    </a>
                    <a href="{{path('app_admin_get_documents',{ 'category': 'livretAccueil' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-3.jpg" alt="Document 3">
                            <div class="document-title">Livret d’accueil des stagiaires et règlement intérieur</div>
                            <span class="nbDoc">{{ nbdocLivretAccueil }}</span>
                        </div>
                    </a>
                </div>
                <div class="documents-container">
                    <a href="{{path('app_admin_get_documents',{ 'category': 'processusInterne' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-4.jpg" alt="Document 4">
                            <div class="document-title">Processus interne de mise en œuvre des formations</div>
                            <span class="nbDoc">{{ nbdocProcessusInterne }}</span>
                        </div>
                    </a>
                    <a href="{{path('app_admin_get_documents',{ 'category': 'processusAmelioration' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-5.jpg" alt="Document 5">
                            <div class="document-title">Processus d’amélioration continue des formations professionnelles</div>
                            <span class="nbDoc">{{ nbdocProcessusAmelioration }}</span>
                        </div>
                    </a>
                    <a href="{{path('app_admin_get_documents',{ 'category': 'autre' })}}">
                        <div class="document-card">
                            <img src="/assets/img/news-5.jpg" alt="Document 5">
                            <div class="document-title">Autre Documents</div>
                            <span class="nbDoc">{{ nbdocAutre }}</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
