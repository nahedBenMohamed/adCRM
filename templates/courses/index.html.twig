{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
        <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des formations</h5>
                        <div class="row">
                            <div class="col-lg-9"></div>
                            <div class="col-md-3"><a href="{{path('app_courses_add')}}" type="button" class="btn btn-primary float-end">Ajouter une formation</a></div>
                        </div>
                        <br/>
                        <!-- Table with stripped rows -->
                        <table class="table" id="list-formations">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Client</th>
                                <th scope="col">Intitulé de la formation</th>
                                <th scope="col">Formateur</th>
                                <th scope="col">Date de début</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in courses %}
                            <tr>
                                <td>{{course.id}}</td>
                                <td>{% if course.customer is defined and course.customer is not null %} {{course.customer.firstName}} {% else %} - {% endif %}</td>
                                <td>{{course.nomFormation}}</td>
                                <td>{% if course.formateur is defined and course.formateur is not null %} {{course.formateur.firstName}} {% else %} - {% endif %}</td>
                                <td>{{course.dateDebutFormation |date('d-m-Y')}}</td>
                                <td>
                                <a href="{{ path('app_courses_edit', { 'id':course.id }) }}" class="btn btn-outline-warning">
                                      <i class="bi bi-pencil-square"></i>
                                </a>
                                <button class="btn btn-outline-danger" type="submit">
                                      <i class="bi bi-trash3-fill"></i>
                                </button>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
     <script>
         const datatablesSimple = document.getElementById('list-formations');
         new simpleDatatables.DataTable(datatablesSimple, {
             perPage: 100
         });
     </script>
{% endblock %}
