{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
        <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des formations</h5>
                        <div class="row">
                            <div class="col-md-3"><a href="{{path('app_courses_add')}}" type="button" class="btn btn-primary">Ajouter une formation</a></div>
                            <div class="col-md-9"></div>
                        </div>
                        <br/>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th scope="col">Intitulé</th>
                                <th scope="col">Durée</th>
                                <th scope="col">Lieu/modalité</th>
                                <th scope="col">Nombre total d'heures</th>
                                <th scope="col">Début</th>
                                <th scope="col">Fin</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in courses %}
                            <tr>
                                <td>{{course.nomFormation}}</td>
                                <td>{{course.dureeFormation}}</td>
                                <td>{{course.timesheet}}</td>
                                <td>{{course.adresseFormation | slice(0, 20)}}...</td>
                                <td>{{course.dateDebutFormation |date('d-m-Y')}}</td>
                                <td>{{course.dateFinFormation |date('d-m-Y')}}</td>
                                <td>
                                <a href="{{ path('app_courses_edit', { 'id':course.id }) }}" class="btn btn-outline-warning">
                                      <i class="bi bi-pencil-square"></i>
                                </a>
                                <button class="btn btn-outline-danger" type="submit">
                                      <i class="bi bi-trash3-fill"></i>
                                </button>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
