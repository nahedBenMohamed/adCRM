{% extends 'baseAdmin.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter un nouveau stagiaire </h5>
                        <!-- add user Form -->
                        {{ form_start(registrationForm) }}
                        <div class="row mb-3">
                            {{ form_row(registrationForm.civility,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(registrationForm.firstName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(registrationForm.lastName,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(registrationForm.position,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(registrationForm.customer,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        <div class="row mb-3">
                            {{ form_row(registrationForm.email,
                                {'attr': {'class': 'form-control form-control-user'}}
                            ) }}
                        </div>
                        {% if formationId is defined %}
                            <input type="hidden" name="formation_id" value="{{ formationId }}">
                        {% endif %}
                        <div class="row pages-links">
                            <div class="col-md-4">
                            {% if formationId is defined %}
                                <a href="" class="">
                                    <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}" width="30">
                                </a>
                            {% else %}
                                <a href="{{path('app_trainees')}}">
                                    <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}" width="30">
                                </a>
                            {% endif %}
                            </div>
                            <div class="col-md-4 offset-md-4 text-right">
                                <button type="submit" class="save-icon">
                                    <img src="{{asset('assets/img/icon/save-disk-solid.svg')}}" width="30">
                                </button>
                            </div>
                        </div>
                        {{ form_end(registrationForm) }} <!-- End add user form -->
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}