<style>
    .list-choice {
        display: grid;
    }
    .list-choice label {
        margin-top: -15px;
    }
</style>
{% endblock %}
{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
