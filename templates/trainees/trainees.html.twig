{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="remove-element-alert mt-2"></div>
                <div class="pt-4 pb-2">
                    {% for success in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ success }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                </div>
                <div class="card">
                    <div class="card-body ps-0 pe-0">
                        <div class="row">
                            <div class="col-lg-10"></div>
                            <div class="col-lg-1">
                                <a href="{{path('app_add_trainee')}}" title="Ajouter stagiaire" class="float-end mt-4 mb-4 add-new" style="position: absolute;right: 88px;top: 0px;">
                                    <img src="{{asset('assets/img/icon/circle-plus-solid-blue.svg')}}" width="40">
                                </a>
                            </div>
                            <div class="col-lg-1">
                                <a href="{{path('app_download_trainee')}}" title="Télecharger stagiaires" class="float-end mt-4 mb-4" style="position: absolute;right: 40px;top: 3px;">
                                    <img src="{{asset('assets/img/icon/file-arrow-down-solid-bleu.svg')}}" width="25" class="float-end">
                                </a>
                            </div>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Fonction</th>
                                <th scope="col">Entreprise/Organisme</th>
                                <th>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{user.firstName}}</td>
                                    <td>{{user.lastName}}</td>
                                    <td>{{user.position}}</td>
                                    <td>{% if user.company|length >0 %} {{user.company.name}} {% endif %}</td>
                                    <td class="text-center">
                                        <a href data-bs-toggle="modal" data-bs-target="#confirmationModal" class="first-btn deleteBtn" title="supprimer" data-remove-url="{{path('app_delete_trainee',{ 'id': user.id })}}">
                                            <img src="{{asset('assets/img/icon/circle-delete-solid-red.svg')}}">
                                        </a>
                                        <a href="{{path('app_edit_user_trainee',{ 'id': user.id })}}" class="" title="modifier">
                                            <img src="{{asset('assets/img/icon/pen-solid.svg')}}">
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
