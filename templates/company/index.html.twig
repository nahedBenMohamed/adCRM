{% extends 'baseAdmin.html.twig' %}

{% block title %}Entreprise/Organisme!{% endblock %}

{% block body %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="remove-element-alert mt-2"></div>
                <div class="card">
                    <div class="card-body ps-0 pe-0">
                        <div class="row">
                            <div class="col-lg-8 col-md-8"></div>
                            <div class="col-lg-4 col-md-4">
                                <a href="{{path('app_customer_add')}}" title="Ajouter un nouveau client" class="float-end mt-4 mb-4 add-new">
                                    <img src="{{asset('assets/img/icon/circle-plus-solid-blue.svg')}}" width="40">
                                </a>
                            </div>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Nom de Client</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for company in companies %}
                                <tr>
                                    <td> <a href="#" class="company-link" title="Liste des formations">{{company.name}}</a></td>
                                    <td class="text-center">
                                        <a href data-bs-toggle="modal" data-bs-target="#confirmationModal" class="first-btn deleteBtn" data-remove-url="{{path('app_delete_company',{ 'id': company.id })}}">
                                            <img src="{{asset('assets/img/icon/circle-delete-solid-red.svg')}}">
                                        </a>
                                        <a href="#" class="" title="modifier">
                                            <img src="{{asset('assets/img/icon/pen-solid.svg')}}">
                                        </a>
                                        {% if company.infoFilename != '' %}
                                            <a href="/documents/companyFiles/{{ company.infoFilename }}" class="" title="Voir fichier" target="_blank" style="margin-left: 10px">
                                                <img src="{{asset('assets/img/icon/file-solid.svg')}}">
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
