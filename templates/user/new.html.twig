{% extends 'baseAdmin.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="section">
      <div class="row">
      <div class="col-lg-3"></div>
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ajouter un nouveau utilisateur</h5>

              <!-- add user Form -->
              {{ form_start(registrationForm) }}
               <div class="row mb-3">
                   {{ form_row(registrationForm.firstName, 
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}     
                </div>
                 <div class="row mb-3">
                   {{ form_row(registrationForm.lastName, 
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}     
                </div>
                <div class="row mb-3">
                   {{ form_row(registrationForm.phone, 
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}     
                </div>
                <div class="row mb-3">
                   {{ form_row(registrationForm.email, 
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}     
                </div>
          
                <div class="row mb-3">
                 {{ form_row(registrationForm.password.first,
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}
                </div>
                <div class="row mb-3">
                  {{ form_row(registrationForm.password.second,
                                {'attr': {'class': 'form-control form-control-user'}}
                                ) }}
                </div>
            
                <div class="row mb-3">
                    <div class="col-md-9">
                        <a href="{{path('app_user')}}">
                            <img src="{{asset('assets/img/icon/circle-delete-solid.svg')}}" width="40">
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="save-icon">
                            <img src="{{asset('assets/img/icon/save-disk-solid.svg')}}" width="40">
                        </button>
                        <a href="{{path('app_add_user')}}" class="float-end" >
                            <img src="{{asset('assets/img/icon/circle-plus-solid.svg')}}" width="40">
                        </a>
                    </div>
                </div>
               {{ form_end(registrationForm) }} <!-- End add user form -->
            </div>
          </div>

        </div>
      </div>
    </section> 
{% endblock %}