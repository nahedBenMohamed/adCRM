{% extends 'base2.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <body class="bg-gradient-primary">
        <div class="container" style="margin-top:10%">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <img class="col-lg-5 d-none d-lg-block" src="/assets/img/inscription.jpg"/>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Inscription Employeur !</h1>
                                </div>

                                <form class="user">
                                    {{ form_start(registrationFormEmployeur) }}
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                {{ form_row(registrationFormEmployeur.email, 
                                                {'attr': {'class': 'form-control form-control-user'}}
                                                ) }}  
                                            </div>

                                            <div class="col-sm-6">
                                                {{ form_row(registrationFormEmployeur.plainPassword.first,
                                                {'attr': {'class': 'form-control form-control-user'}}
                                                ) }}
                                                <br>
                                                {{ form_row(registrationFormEmployeur.plainPassword.second,
                                                {'attr': {'class': 'form-control form-control-user'}}
                                                ) }}
                                            </div>
                                        </div>
                                        {{ form_row(registrationFormEmployeur.agreeTerms) }} 
                                    
                                        <a href="login.html" class="btn btn-primary btn-user btn-block">
                                            Inscription
                                        </a>
                                    {{ form_end(registrationFormEmployeur) }} 
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="login.html">Déjà un compte ? Connecte toi !</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

    </body>
{% endblock %}